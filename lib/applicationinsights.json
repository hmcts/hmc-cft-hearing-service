{
  "connectionString": "${file:/mnt/secrets/hmc/app-insights-connection-string}",
  "role": {
    "name": "hmc-cft-hearing-service"
  }, 
  "preview": {
    "captureControllerSpans": true,
    "captureLoggingLevelAsCustomDimension": true,
    "sampling": {
      "overrides": [
        {
          "telemetryType": "request",
          "attributes": [
            {
              "key": "http.url",
              "value": "https?://[^/]+/health.*",
              "matchType": "regexp"
            }
          ],
          "percentage": 1
        }
      ]
    }
  }
}
